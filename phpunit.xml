<phpunit ansi="false" convertErrorsToExceptions="true" convertNoticesToExceptions="true" convertWarningsToExceptions="true" stopOnFailure="false">
    <testsuite name="PHPTypeSafe">
        <directory suffix="Test.php">.</directory>
        <directory suffix="Test.phpt">matcher</directory>
    </testsuite>
    
    <filter>
        <whitelist addUncoveredFilesFromWhitelist="true">
            <directory suffix=".php">../../../../../main/php/com/maxhorvath/phptypesafe</directory>
        </whitelist>
    </filter>
</phpunit>